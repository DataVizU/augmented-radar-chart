{
  "name": "augmented-radar-chart-global",
  "version": "1.0.0",
  "scripts": {
    "build": "pnpm -r build",
    "build:core": "pnpm --filter augmented-radar-chart build",
    "dev:esm": "pnpm --filter example-esm dev",
    "dev:vite": "pnpm --filter example-vite dev",
    "dev:umd": "pnpm --filter example-umd dev",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.4.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "private": true
}
