{
  "name": "@datavizu/augmented-radar-chart",
  "version": "1.0.0",
  "description": "Augmented Radar Chart combines the features of both radar charts and horizon charts, allowing simultaneously visualize single attribute of multidimensional data and distribution of each dimension.",
  "author": "datavizu",
  "license": "MIT",
  "homepage": "https://github.com/DataVizU/augmented-radar-chart",
  "repository": {
    "type": "git",
    "url": "https://github.com/DataVizU/augmented-radar-chart"
  },
  "keywords": [
    "augmented-radar-chart",
    "radar-chart",
    "horizon-chart",
    "data-visualization",
    "data-chart"
  ],
  "bugs": {
    "url": "https://github.com/DataVizU/augmented-radar-chart/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --ignore-path ../../.eslintignore",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix --ignore-path ../../.eslintignore",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "publish": "npm publish"
  },
  "devDependencies": {
    "@types/chroma-js": "^3.1.0",
    "@types/d3": "^7.4.3",
    "@vitest/coverage-v8": "3.1.3",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vite": "6.3.4",
    "vitest": "3.0.5"
  },
  "dependencies": {
    "chroma-js": "^3.1.2",
    "d3": "^7.9.0"
  }
}
